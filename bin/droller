#!/usr/bin/env bash

DIRECTORY="$HOME/.config/droller"
INDEX="$DIRECTORY/index"
HEAD="$DIRECTORY/head"

main() {
    createFiles
    echo $# args
}

createFiles() {
    if [ ! -d "$DIRECTORY" ]; then
        mkdir -p $DIRECTORY
    fi
    if [ ! -f "$INDEX" ]; then
        touch $INDEX
    fi
}

main $@

